<div class="row">
  <div class="col-md-12">
    <div class="block-flat">

      <div class="header">
        <h3><i class="fa <%= @klass.icon %>"></i> <%= @klass.model_name.human %></h3>
      </div>

      <div class="content">
        <div class="table-responsive">
          <div role="grid" class="dataTables_wrapper form-inline" id="datatable_wrapper">

            <%= render :partial => 'datatable', :locals => { klass: @klass, datatable_config: @datatable_config[@klass_key] } %>

<% if @active_record_config[@klass_key][:creatable] %>
            <div class="row">
              <div class="col-sm-12">
                <div class="pull-left">
                  <%= link_to("#{t('operations.new')} #{@klass.model_name.human}", new_object_path, :class => 'btn btn-primary') %>
                </div>
              </div>
            </div>
<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
