<%= simple_form_for(resource,
      :as => resource_name,
      :url => session_path(resource_name),
      :html => {:style => 'margin-bottom: 0px !important;', :class => 'form-horizontal'}
    ) do |f| %>
  <div class="content">
    <h4 class="title"><%= t('operations.sign_in_please') %></h4>
    <%= f.error_notification %>
    <div class="form-group">
      <div class="col-sm-12">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
          <input id="user_email" type="email" name="user[email]" autofocus="autofocus" placeholder="E-mail" class="form-control">
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= f.input_field :password, :placeholder => t('operations.password'), :class => 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <div class="checkbox">
          <%= f.input :remember_me, :as => :boolean, :label => t('operations.remember_me'), :input_html => { :checked => true } %>
        </div>
      </div>
    </div>

  </div>
  <div class="foot">
    <%= f.button :submit, t('operations.sign_in'), :class => 'btn btn-primary' %>
  </div>
<% end %>
